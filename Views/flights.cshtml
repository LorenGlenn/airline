<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>All Flights</title>
  </head>
  <body>
    <h1>All the Flights</h1>
    <br>
    @if (Model != null)
    {
      @foreach(var flight in Model)
      {
        <h3>- Flight Details -</h3>
        <ul>
          <li>Flight number: @flight.GetId()</li>
          <li>Departure Time: @flight.GetDepartTime()</li>
          <li>Departure City: @flight.GetDepartCity()</li>
          <li>Destination City: @flight.GetDestination()</li>
          <li>Status: @flight.GetStatus()</li>
        </ul>
      }
    }
    <br>
    <h2>Add new Flight</h2>
    <form action="/flights/added" method="post">
      <label for="time">Departure Time:</label>
      <input type="text" name="time">
      <br>
      <label for="depart">Departure City:</label>
      <input type="text" name="depart">
      <br>
      <label for="destination">Destination City:</label>
      <input type="text" name="destination">
      <br>
      <label for="status">Status:</label>
      <input type="text" name="status">
      <br>
      <button type="submit">Submit</button>
    </form>
    <h3><a href="/">Home</a></h3>
  </body>
</html>
